@model BusJourneyDetailViewModel

@{
    ViewData["Title"] = "OBilet Case Çalışması";
}

<div class="container my-5">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary position-relative">
        <a class="btn btn-close-white back-btn" href="@Url.Action("Index", "BusLocation")"><i class="fas fa-arrow-left"></i></a>
        <div class="journey-header-text">
            <p class="mb-0">@Model.FormHeaderText</p>
            <p class="mb-0">@Model.DepartureDateText</p>
        </div>
    </nav>
    @foreach (var item in Model.BusJourneys)
    {
        var arrivalTimeText = item.ArrivalDate.Hour.ToString("D2") + ":" + item.ArrivalDate.Minute.ToString("D2");
        var departureTimeText = item.DepartureDate.Hour.ToString("D2") + ":" + item.DepartureDate.Minute.ToString("D2");

        <div class="card">
            <div class="card-body d-flex flex-column justify-content-center">
                <h3 class="card-title text-primary">@arrivalTimeText -> @departureTimeText</h3>
                <p class="card-text">@item.OriginLocation - @item.DestinationLocation</p>
                <div class="mt-auto text-right">
                    <a href="#" class="btn btn-danger">@item.InternetPrice @item.Currency</a>
                </div>
            </div>

        </div>
    }
</div>

@section scripts{
    <script>
        $(document).ready(function () {


        });
    </script>

}
